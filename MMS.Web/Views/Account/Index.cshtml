
@{
    ViewData["Title"] = "Accounts";
}


@model MMS.Entities.Dtos.Incomming.AccountDTO


<div class="row align-items-center justify-content-center">

    <div class="card w-75">
        <div class="card-header">
            <h4>Your Account Details</h4>
        </div>
        <div class="card-body">
               <div class="row">
                   <div class="col-3">
                       <h5><b>Client Id :</b></h5>
                   </div>
                   <div class="col-9">
                       <p><i>@Model.ClientId</i></p>
                   </div>
               </div>

               <div class="row">
                   <div class="col-3">
                       <h5><b>Client Secret :</b></h5>
                   </div>
                   <div class="col-9">
                       <p><i>@Model.ClientSecret</i></p>
                   </div>
               </div>
        </div>
        <div class="card-footer">
            <div class="row justify-content-center">
                <button type="button" class="btn btn-sm btn-info w-25" data-bs-toggle="modal" data-bs-target="#account_details">
                    Edit
                </button>
            </div>
        </div>
    </div>
</div>

@Html.Partial("_Modals")



