@{
    ViewData["Title"] = "Account Transactions";
}


<div class="d-flex justify-content-center">
    <div class="card">
        <div class="card-header">
            <h4>Transactions</h4>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Mess_Name</th>
                            <th>Amount</th>
                            <th>Status</th>
                            <th>Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in ViewBag.Transactions)
                        {
                            <tr>
                                <td>@item.Messname</td>
                                <td>@item.Amount</td>
                                @if (item.Success)
                                {
                                    <td style="color:green"><b>Success</b></td>
                                }
                                else
                                {
                                    <td style="color:red">Failed</td>
                                }
                                <td>@item.CreatedAt</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
