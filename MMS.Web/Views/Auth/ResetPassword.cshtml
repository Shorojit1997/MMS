@{
    ViewData["Title"] = "Password Reset";
}


@model MMS.Authentication.Models.DTO.Incomming.ResetPasswordDTO

<div class="container">

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <form asp-controller="Auth" asp-action="Resetpassword" method="post" class="border-1">
                        <div asp-validation-summary="All"></div>

                        <div class="mt-2 row">
                            <label asp-for="Password"></label>
                            <input placeholder="Password" type="password" asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="mt-2 row">
                            <label asp-for="ConfirmPassword"></label>
                            <input placeholder="Confirm Password" type="password" asp-for="ConfirmPassword" class="form-control" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        <input type="text" name="Token" hidden value="@Model.Token"  />
                        <input type="text" name="Email" hidden value="@Model.Email" />
                        <div class="row p-3">
                            <input type="submit" class="btn btn-success m-1" style="width:150px"></input>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>


</div>
